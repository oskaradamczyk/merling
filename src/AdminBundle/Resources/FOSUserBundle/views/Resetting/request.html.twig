<div class="container">
    <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png"/>
        <p id="profile-name" class="profile-name-card"></p>
        <form class="form-signin fos_user_resetting_request" action="{{ path('fos_user_resetting_send_email') }}" novalidate="novalidate"
              method="POST">
            <div>
                <input name="username" type="text" id="username" class="form-control"
                       placeholder="{{ 'admin.fos_user.username_or_email'|trans }}" required autofocus>
            </div>
            <div>
                <input type="submit" class="btn btn-lg btn-primary btn-block btn-signin" value="{{ 'Submit'|trans }}"/>
            </div>
        </form>
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissable">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>
</div>